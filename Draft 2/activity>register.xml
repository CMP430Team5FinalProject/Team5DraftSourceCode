<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_wallpaper"
    tools:context=".RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calorie Calculator!"
        android:textStyle="bold|italic"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:layout_marginStart="40dp"
        android:textColor="@color/colorTextPrimary"
        android:textSize="40sp"/>

    <EditText
        android:id="@+id/register_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/input_design"
        android:layout_margin="16dp"
        android:hint="Your Name"

        android:textColor="@color/colorTextPrimary"
        android:inputType="text"
        android:layout_above="@+id/register_phone_number"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/register_phone_number"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/input_design"
        android:layout_margin="16dp"
        android:hint="Phone Number"

        android:textColor="@color/colorTextPrimary"
        android:inputType="number"
        android:layout_centerInParent="true"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/register_password_input"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/input_design"
        android:layout_margin="16dp"
        android:hint="Passord"

        android:textColor="@color/colorTextPrimary"
        android:inputType="number"
        android:layout_below="@+id/register_phone_number"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/rgister_create_account"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Create Account"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        android:layout_margin="16dp"
        android:textColor="@color/colorTextPrimary"
        android:background="@drawable/input_design"
        android:layout_below="@id/register_password_input"/>


</RelativeLayout>
